<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIPMI.EditRequestedEventPmiActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout333"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/requestedEditEventPmiBack"
                    app:srcCompat="@drawable/ic_arrow_back_pink_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/theme_background_icon_grey"
                    android:src="@drawable/ic_arrow_back_pink_24dp" />

                <TextView
                    android:id="@+id/textViewPmi"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Edit Acara"
                    android:textColor="@color/colorBlue1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/layout_padding"
                android:paddingTop="@dimen/layout_padding"
                android:paddingEnd="@dimen/layout_padding"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    app:srcCompat="@drawable/ic_event_add" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Judul Acara"
                    android:textColor="@color/colorBlue1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/eventEditPmiTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:background="@drawable/theme_edittext_solid_corner"
                    android:clickable="true"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Judul Kegiatan Acara"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Instansi"
                    android:textColor="@color/colorBlue1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/eventEditPmiInstitution"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:background="@drawable/theme_edittext_solid_corner"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:foregroundGravity="bottom"
                    android:gravity="center_vertical"
                    android:hint="Instansi Terkait Acara"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Deskripsi"
                    android:textColor="@color/colorBlue1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/eventEditPmiDescription"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:background="@drawable/theme_edittext_solid_corner"
                    android:clickable="true"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Deskripsi "
                    android:inputType="textLongMessage"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Estimasi Pendonor"
                    android:textColor="@color/colorBlue1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/eventEditPmiTarget"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:background="@drawable/theme_edittext_solid_corner"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:foregroundGravity="bottom"
                    android:gravity="center_vertical"
                    android:hint="Estimasi Jumlah Pendonor"
                    android:inputType="number"
                    android:padding="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/layout_padding"
                android:paddingEnd="@dimen/layout_padding"
                android:paddingBottom="@dimen/layout_padding">


                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Tanggal dan Waktu"
                    android:textColor="@color/colorBlue1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/eventEditPmiDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="@dimen/input_margin"
                        android:layout_weight="1"
                        android:background="@drawable/theme_edittext_solid_corner"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:foregroundGravity="bottom"
                        android:gravity="center_vertical"
                        android:hint="Pilih Tanggal"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        tools:layout_editor_absoluteX="30dp"
                        tools:layout_editor_absoluteY="272dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/eventEditPmiTimeStart"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="@dimen/input_margin"
                            android:layout_weight="1"
                            android:background="@drawable/theme_edittext_solid_corner"
                            android:clickable="true"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:foregroundGravity="bottom"
                            android:gravity="center_vertical"
                            android:hint="Pilih Waktu"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            tools:layout_editor_absoluteX="30dp"
                            tools:layout_editor_absoluteY="272dp" />

                        <EditText
                            android:id="@+id/eventEditPmiTimeEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="@dimen/input_margin"
                            android:layout_weight="1"
                            android:background="@drawable/theme_edittext_solid_corner"
                            android:clickable="true"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:foregroundGravity="bottom"
                            android:gravity="center_vertical"
                            android:hint="Pilih Waktu"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            tools:layout_editor_absoluteX="30dp"
                            tools:layout_editor_absoluteY="272dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Lokasi"
                    android:textColor="@color/colorBlue1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/eventEditPmiLocation"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/theme_edittext_solid_corner"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:foregroundGravity="bottom"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/eventEditPmiContainerIcon"
                        android:layout_width="117dp"
                        android:layout_height="118dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/eventEditPmiLocation"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/ic_location_color" />

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih Lokasi" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <Button
                android:id="@+id/eventEditPmiSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_margin="@dimen/input_margin"
                android:layout_weight="1"
                android:background="@drawable/theme_button_solid_radius"
                android:text="Simpan Perubahan"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>