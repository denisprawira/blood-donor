<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_gravity="center_vertical|center_horizontal|center">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="25dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingTop="18dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/otherEventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/navyBlue"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:text="Event Title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/otherEventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_date_grey"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/source_sans_pro_bold"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textColor="#afafaf" />

                    <TextView
                        android:id="@+id/otherEventStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:drawableStart="@drawable/ic_time_grey"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/source_sans_pro_bold"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textColor="#afafaf" />

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/source_sans_pro_bold"
                        android:gravity="center_vertical"
                        android:text="-"
                        android:textColor="#afafaf"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/otherEventEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_bold"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textColor="#afafaf" />
                </LinearLayout>

                <TextView
                    android:id="@+id/otherEventAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="alamat"
                    android:textColor="@color/navyBlue"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="3"
                android:gravity="left|center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="center_vertical|end">

                    <TextView
                        android:id="@+id/otherEventDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:drawableStart="@drawable/ic_location_color"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/navyBlue"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</androidx.constraintlayout.ConstraintLayout>