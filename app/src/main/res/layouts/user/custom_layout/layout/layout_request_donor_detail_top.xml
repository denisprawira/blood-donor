<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <ImageButton
                android:id="@+id/backDetailDonor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/theme_button_transparent"
                app:srcCompat="@drawable/ic_arrow_back_pink_24dp" />

            <TextView
                android:id="@+id/chatName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="85dp"
                android:gravity="center"
                android:text="Permintaan Pendonor"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:gravity="center_horizontal"
        android:text="Darah yang Dicari:"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/donorRequestDetailBlood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Text"
        android:textColor="@color/colorAccent"
        android:textSize="50dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/donorRequestDetailTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_time_grey"
            android:drawablePadding="5dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="#afafaf"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donorRequestDetailUtdName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/ic_building_grey"
            android:drawablePadding="5dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:minWidth="50dp"
            android:paddingEnd="5dp"
            android:text="TextView"
            android:textColor="#afafaf"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/donorRequestDetailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/ic_location_grey"
            android:drawablePadding="5dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="TextView"
            android:textColor="#afafaf"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>