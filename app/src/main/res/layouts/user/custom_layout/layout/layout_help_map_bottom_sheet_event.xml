<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="top"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/theme_background_bottom_sheet"
        android:elevation="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/eventMapTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="Title of Event"
                android:textColor="@color/navyBlue"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eventMapDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:drawableStart="@drawable/ic_date_grey"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="#afafaf" />

                <TextView
                    android:id="@+id/eventMapStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:drawableStart="@drawable/ic_time_grey"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="#afafaf" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:gravity="center_vertical"
                    android:text="-"
                    android:textColor="#afafaf"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventMapEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="#afafaf" />
            </LinearLayout>

            <TextView
                android:id="@+id/eventMapDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="TextView"
                android:textColor="#afafaf"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/eventMapDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="12dp"
                android:drawableStart="@drawable/ic_location_color"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/navyBlue"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/eventMapDetail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/theme_button_solid_radius"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Detail"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/callDecline"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</LinearLayout>