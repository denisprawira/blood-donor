<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0EEEE"
        android:elevation="0dp"
        android:gravity="center"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingStart="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.204">

                <TextView
                    android:id="@+id/eventRequestLabelDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start|end"
                    android:text="03 March ,2019"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventRequestLabelDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:text="Friday"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="323dp"
                android:layout_height="160dp"
                android:layout_gravity="center|end"
                android:layout_marginTop="76dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/illustration_women_event" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:gravity="end"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="20dp">

                    <ImageButton
                        android:id="@+id/backRequestEvent"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right|end"
                        android:layout_margin="5dp"
                        android:background="@drawable/theme_button_transparent"
                        android:elevation="8dp"
                        android:foregroundGravity="left"
                        app:srcCompat="@drawable/ic_arrow_back_pink_24dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="20dp" />
                </LinearLayout>


            </android.support.v7.widget.Toolbar>
        </androidx.constraintlayout.ConstraintLayout>


    </android.support.design.widget.AppBarLayout>

</LinearLayout>