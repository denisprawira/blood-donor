<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:elevation="0dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp">

                    <ImageButton
                        android:id="@+id/backBloodBank"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/theme_button_transparent"
                        app:srcCompat="@drawable/ic_arrow_back_pink_24dp" />

                    <TextView
                        android:id="@+id/chatName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="85dp"
                        android:gravity="center"
                        android:text="Cari Stok Darah"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <EditText
                android:id="@+id/bloodBankGolDarah"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/theme_edittext_solid_radius"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:hint="Pilih Golongan Darah"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="#b2b2b2"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/bloodBankComponent"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/theme_edittext_solid_radius"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:hint="Pilih Komponen Darah"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="#b2b2b2"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/searchBlood"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/theme_button_solid_corner"
                android:text="Cari"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>