<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.HelpRequest.RequestDonorDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/backEventDocument"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_arrow_back_pink_24dp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/input_margin"
                    android:layout_marginEnd="@dimen/input_margin"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:gravity="center_vertical"
                    android:text="Permintaan Donor Pengganti"
                    android:textColor="@color/colorBlue1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    app:srcCompat="@drawable/ic_find_donor" />

                <EditText
                    android:id="@+id/findDonorAddPatientName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:background="@drawable/theme_edittext_solid_corner"
                    android:clickable="true"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Nama Pasien"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/findDonorAddPatientBlood"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:background="@drawable/theme_edittext_solid_corner"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:foregroundGravity="bottom"
                    android:gravity="center_vertical"
                    android:hint="Pilih Golongan Darah"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/findDonorAddDescription"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:background="@drawable/theme_edittext_solid_corner"
                    android:clickable="true"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Deskripsi "
                    android:inputType="textLongMessage|textMultiLine"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/findDonorAddFile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:background="@drawable/theme_edittext_solid_corner"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:foregroundGravity="bottom"
                    android:gravity="center_vertical"
                    android:hint="Lampiran (Optional)"
                    android:inputType="number"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/findDonorAddAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:layout_marginBottom="@dimen/input_margin"
                    android:background="@drawable/theme_edittext_solid_corner"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:foregroundGravity="bottom"
                    android:gravity="center_vertical"
                    android:hint="Estimasi Jumlah Pendonor"
                    android:inputType="number"
                    android:padding="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/findDonorSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/theme_button_solid_radius"
                    android:text="Kirim permintaan"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>