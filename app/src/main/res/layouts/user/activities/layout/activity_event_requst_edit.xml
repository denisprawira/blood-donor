<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Event.EventRequestEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/backEditEvent"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/theme_button_rectangle_coloraccent"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0"
                        app:srcCompat="@drawable/ic_arrow_back_white" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/source_sans_pro_bold"
                        android:text="Edit Event"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageView10"
                        app:layout_constraintHorizontal_bias="0.437"
                        app:layout_constraintStart_toEndOf="@+id/backEditEvent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:scaleType="fitEnd"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_event_top_decor" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/linearLayout12"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_event_top_decor3"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appbar"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/theme_textview_solid_radius_coloraccent"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:text="Utd yang Dituju"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/eventRequestEditUtdName"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"

                                android:background="@drawable/theme_edittext_solid_corner"
                                android:clickable="true"
                                android:focusable="false"
                                android:ems="10"
                                android:foregroundGravity="bottom"
                                android:gravity="bottom"
                                android:hint="Organisasi Instansi"
                                android:inputType="textPersonName"
                                android:paddingStart="20dp"
                                android:paddingTop="20dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="20dp"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/theme_textview_solid_radius_coloraccent"
                            android:gravity="center"
                            android:minWidth="90dp"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:text="Judul"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/eventRequestEditTitle"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"

                            android:background="@drawable/theme_edittext_solid_corner"
                            android:clickable="true"
                            android:ems="10"
                            android:foregroundGravity="bottom"
                            android:gravity="bottom"
                            android:hint="Judul Kegiatan.."
                            android:inputType="textPersonName"
                            android:paddingStart="20dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="20dp"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/theme_textview_solid_radius_coloraccent"
                            android:gravity="center"
                            android:minWidth="90dp"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:text="Deskripsi"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/eventAddPmi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/theme_edittext_solid_corner"
                            android:clickable="true"
                            android:drawablePadding="20dp"
                            android:ems="10"
                            android:gravity="top"
                            android:hint="Deskripsi Kegiatan..."
                            android:inputType="textMultiLine|textPersonName"
                            android:minHeight="99dp"
                            android:paddingStart="20dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="20dp"
                            android:textSize="15dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">



                        <TextView
                            android:id="@+id/fdfdfdfdfd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/theme_textview_solid_radius_coloraccent"
                            android:gravity="center"
                            android:minWidth="90dp"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:text="Organisasi/Instansi"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/eventRequestEditInstansi"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/theme_edittext_solid_corner"
                            android:clickable="true"
                            android:ems="10"
                            android:foregroundGravity="bottom"
                            android:gravity="bottom"
                            android:hint="Judul Kegiatan..."
                            android:inputType="textPersonName"
                            android:paddingStart="20dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="20dp"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/theme_textview_solid_radius_coloraccent"
                            android:gravity="center"
                            android:minWidth="90dp"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:text="Target Pendonor"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/eventRequestEditTarget"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/theme_edittext_solid_corner"
                            android:clickable="true"
                            android:ems="10"
                            android:foregroundGravity="bottom"
                            android:gravity="bottom"
                            android:hint="Judul Kegiatan..."
                            android:inputType="textPersonName"
                            android:paddingStart="20dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="20dp"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"

                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/gfj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/theme_textview_solid_radius_coloraccent"
                            android:gravity="center"
                            android:minWidth="90dp"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:text="Tanggal Kegiatan"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/eventRequestEditDate"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/theme_edittext_solid_corner"
                            android:clickable="true"
                            android:ems="10"
                            android:focusable="false"
                            android:foregroundGravity="bottom"
                            android:gravity="bottom"
                            android:hint="Tanggal Kegiatan..."
                            android:inputType="textPersonName"
                            android:paddingStart="20dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="20dp"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/bgfg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/theme_textview_solid_radius_coloraccent"
                            android:gravity="center"
                            android:minWidth="90dp"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:text="Waktu"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/eventRequestEditTime"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/theme_edittext_solid_corner"
                            android:clickable="true"
                            android:ems="10"
                            android:focusable="false"
                            android:foregroundGravity="bottom"
                            android:gravity="bottom"
                            android:hint="Judul Kegiatan..."
                            android:inputType="textPersonName"
                            android:paddingStart="20dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="20dp"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/theme_textview_solid_radius_coloraccent"
                            android:gravity="center"
                            android:minWidth="90dp"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:text="Lokasi"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/eventRequestEditLocation"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/theme_edittext_solid_corner"
                            android:clickable="true"
                            android:ems="10"
                            android:focusable="false"
                            android:foregroundGravity="bottom"
                            android:gravity="bottom"
                            android:hint="Lokasi Kegiatan..."
                            android:inputType="textPersonName"
                            android:paddingStart="20dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="20dp"
                            android:textSize="15dp" />


                        <TextView
                            android:id="@+id/hj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/theme_textview_solid_radius_coloraccent"
                            android:gravity="center"
                            android:minWidth="90dp"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:text="Surat"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/eventEditDocument"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/theme_edittext_solid_corner"
                                android:clickable="true"
                                android:ems="10"
                                android:focusable="false"
                                android:foregroundGravity="bottom"
                                android:gravity="bottom"
                                android:hint="Surat Pengantar (Optional)..."
                                android:inputType="textPersonName"
                                android:paddingStart="20dp"
                                android:paddingTop="20dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="20dp"
                                android:textSize="15dp" />

                            <ImageButton
                                android:id="@+id/eventRequestEditDocumentDetail"
                                android:layout_width="100dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_activity" />
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/eventRequestEditAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/theme_button_solid_corner"
                        android:text="Simpan"
                        android:textColor="@color/common_google_signin_btn_text_dark_default" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>