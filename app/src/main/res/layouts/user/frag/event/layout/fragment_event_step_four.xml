<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_add_event">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backEventDocument"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_arrow_back_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView32"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:text="Pilih PMI yang Dituju, Estimasi Target, dan Scan Surat Pengantar"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/theme_edittext_white_shadow_radius"
            android:elevation="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/ic_event_add" />

            <EditText
                android:id="@+id/eventPMI"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/theme_edittext_white_shadow_radius"
                android:clickable="true"
                android:focusable="false"
                android:drawableLeft="@drawable/ic_pmi"
                android:drawablePadding="20dp"
                android:ems="10"
                android:foregroundGravity="bottom"
                android:gravity="bottom"
                android:hint="Pilih PMI.."
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/default_inactive_shape_color" />

            <EditText
                android:id="@+id/eventTarget"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/theme_edittext_white_shadow_radius"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_group_pink"
                android:drawablePadding="20dp"
                android:ems="10"
                android:foregroundGravity="bottom"
                android:gravity="bottom"
                android:hint="Estimasi Jumlah Target.."
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/default_inactive_shape_color" />

            <EditText
                android:id="@+id/eventAttachment"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/theme_edittext_white_shadow_radius"
                android:clickable="true"
                android:focusable="false"
                android:drawableLeft="@drawable/ic_attach_file_black_24dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:foregroundGravity="bottom"
                android:gravity="bottom"
                android:hint="Pilih Scan Surat.."
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/submitEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/theme_button_transparent_corner"
            android:text="Submit Event"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>