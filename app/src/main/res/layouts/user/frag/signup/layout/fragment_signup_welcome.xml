<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43">

        <TextView
            android:id="@+id/welcomeTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang.."
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="ini adalah platform yang membantu dalam masalah pencarian donor darah dan event"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/welcome_login"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_height"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/theme_button_solid_radius"
                android:padding="5dp"
                android:text="Login"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/welcome_signup"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_height"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/theme_button_stroke_ripple"
                android:text="Sign Up"
                android:textColor="@color/colorRed1" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>