<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:padding="@dimen/layout_padding">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/svg_logo" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin"
        android:text="Pilih Golongan Darah Anda"
        android:textColor="@color/navyBlue"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18"
        app:layout_constraintVertical_bias="0.13" />

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:gravity="start|left"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/nextToPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="181dp">

            <Button
                android:id="@+id/aplus"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/theme_button_stroke_ripple"
                android:text="A+"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="282dp" />

            <Button
                android:id="@+id/bplus"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/theme_button_stroke_ripple"
                android:text="B+"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="315dp" />

            <Button
                android:id="@+id/abplus"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:background="@drawable/theme_button_stroke_ripple"
                android:text="AB+"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="231dp"
                tools:layout_editor_absoluteY="244dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/oplus"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/theme_button_stroke_ripple"
                android:text="O+"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="282dp" />

            <Button
                android:id="@+id/aneg"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/theme_button_stroke_ripple"
                android:text="A-"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="315dp" />

            <Button
                android:id="@+id/bneg"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:background="@drawable/theme_button_stroke_ripple"
                android:text="B-"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="231dp"
                tools:layout_editor_absoluteY="244dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="279dp">

            <Button
                android:id="@+id/abneg"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/theme_button_stroke_ripple"
                android:text="AB-"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="282dp" />

            <Button
                android:id="@+id/oneg"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/theme_button_stroke_ripple"
                android:text="O-"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="315dp" />

            <Button
                android:id="@+id/tidakTahu"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:background="@drawable/theme_button_stroke_ripple"
                android:text="tidak tahu"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="231dp"
                tools:layout_editor_absoluteY="244dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/nextToPhoto"
        android:layout_width="0dp"
        android:layout_height="@dimen/input_height"
        android:background="@drawable/theme_button_solid_radius"
        android:drawableRight="@drawable/ic_arrow_forward_white"
        android:paddingStart="45dp"
        android:paddingEnd="20dp"
        android:text="@string/form_nextbutton"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>